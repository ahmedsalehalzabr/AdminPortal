@model IEnumerable<AdminPortalUI.Models.DTO.RegionDto>
@{
}

<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var walkd in Model)
        {
            <tr>
                <td>@walkd.Id</td>
                <td>@walkd.Code</td>
                <td>@walkd.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walkd.Id"
                       class="btn btn-success">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>