@model IEnumerable<AdminPortalUI.Models.DTO.WalkDto>
@{
}

<div class="container">
    <div class="my-5">
        <div class="row align-items-stretch">
            @foreach (var walkd in Model)
            {
                <div class="col-12 col-md-4 mb-3">
                    <div class="card h-100">
                        <img src="@walkd.WalkImageUrl" class="card-img-top" alt="@walkd.Name">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                @walkd.Name
                            </h5>
                            <p class="card-text">
                                @walkd.Description
                            </p>
                            <span class="d-flex align-items-end" style="flex: 1">
                                <a asp-controller="Regions" asp-action="Idin" asp-route-id="@walkd.Region.Id" class="btn btn-primary">

                                    Read More
                                </a>
                              
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

