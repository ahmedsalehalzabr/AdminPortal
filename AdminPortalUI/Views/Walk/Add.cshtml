 @model AdminPortalUI.Models.AddWalksViewModel

@{
}


<h1 class="mt-3">Add Walks</h1>

<form method="post">

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">LengthInKm</label>
        <input type="text" class="form-control" asp-for="LengthInKm" />
    </div>
    <div class="mt-3">
        <label class="form-label">WalkImageUrl</label>
        <input type="text" class="form-control" asp-for="WalkImageUrl" />
    </div>
    <div class="mt-3">
        <label class="form-label">DifficultyId</label>
        <input type="text" class="form-control" asp-for="DifficultyId" />
    </div>

    <div class="mt-3">
        <label class="form-label">RegionId</label>
        <input type="text" class="form-control" asp-for="RegionId" />
    </div>
    

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>